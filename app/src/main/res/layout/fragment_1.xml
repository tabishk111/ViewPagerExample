<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Fragment1"
    >

    <data>
        <variable
            name="data"
            type="com.example.viewpager.MainActivity" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout

     android:layout_height="match_parent"
    android:layout_width="match_parent">


        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Technology"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="82dp"
                            android:layout_height="165dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/heading">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@{data.viewModel.newDetails.message.trendingTechnology.get(0).thumbnail}" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="@{data.viewModel.newDetails.message.trendingTechnology.get(0).title}"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toRightOf="@id/card1"
                            app:layout_constraintTop_toTopOf="@+id/card1" />

                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Username 1"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card1"
                            app:layout_constraintTop_toBottomOf="@id/title1" />

                        <TextView
                            android:id="@+id/category1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Category 1"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card1"
                            app:layout_constraintTop_toBottomOf="@id/user1" />

                        <TextView
                            android:id="@+id/subCategory1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Sub Category 1"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/category1"
                            app:layout_constraintTop_toBottomOf="@id/user1" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2"
                            android:layout_width="82dp"
                            android:layout_height="165dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card1">

                                <ImageView
                                    android:id="@+id/img2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@color/cardview_dark_background" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Title 2"
                            android:textSize="20dp"
                            app:layout_constraintLeft_toRightOf="@id/card2"
                            app:layout_constraintTop_toTopOf="@+id/card2" />

                        <TextView
                            android:id="@+id/user2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Username 2"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card2"
                            app:layout_constraintTop_toBottomOf="@id/title2" />

                        <TextView
                            android:id="@+id/category2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Category 2"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card2"
                            app:layout_constraintTop_toBottomOf="@id/user2" />

                        <TextView
                            android:id="@+id/subCategory2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Sub Category 2"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/category2"
                            app:layout_constraintTop_toBottomOf="@id/user2" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="82dp"
                            android:layout_height="165dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card2">

                                <ImageView
                                    android:id="@+id/img3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@color/cardview_dark_background" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Title 3"
                            android:textSize="20dp"
                            app:layout_constraintLeft_toRightOf="@id/card3"
                            app:layout_constraintTop_toTopOf="@+id/card3" />

                        <TextView
                            android:id="@+id/user3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Username 3"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card3"
                            app:layout_constraintTop_toBottomOf="@id/title3" />

                        <TextView
                            android:id="@+id/category3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Category 3"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/card3"
                            app:layout_constraintTop_toBottomOf="@id/user3" />

                        <TextView
                            android:id="@+id/subCategory3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Sub Category 3"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toRightOf="@id/category3"
                            app:layout_constraintTop_toBottomOf="@id/user3" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>